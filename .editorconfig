root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# trailing spaces in markdown indicate word wrap
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{ts,tsx,js,jsx}]
max_line_length = 100

[*.{json,yml,yaml}]
indent_size = 2

[*.sh]
indent_size = 2

